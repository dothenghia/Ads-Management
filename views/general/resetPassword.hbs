<link rel="stylesheet" type="text/css" href="css/general/resetPassword.css">

<main class="resetPassword-screen">

    <div class="resetPassword-illustration">
        <img src="/img/illustration/resetpassword.png" alt="">
    </div>

    <div class="resetPassword-content">
        <h1>Tạo mật khẩu mới</h1>
    </div>

    <form action="/forgetPassword" method="post" id="changePasswordForm" class="resetPassword-form">

        <label for="password">Mật khẩu</label>
        <input type="password" id="password" name="password" placeholder="Nhập mật khẩu mới" required />

        <label for="confirmPassword">Xác nhận mật khẩu</label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Xác nhận mật khẩu mới" required />

        <div class="resetPassword-showPassword">
            <input class="form-check-input" type="checkbox" id="showPassword" value="true">
            <label class="form-check-label" for="showPassword">Hiện mật khẩu</label>
        </div>

        <button type="submit" class="btn btn-primary custom-btn w-100">
            Đổi mật khẩu
        </button>

    </form>

</main>


<script src="./js/resetPassword.js"></script>