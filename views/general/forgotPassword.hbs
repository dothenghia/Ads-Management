<link rel="stylesheet" type="text/css" href="css/forgotPassword.css">

<main class="forgorPassword-screen">

    <a href="login" id="backButton" class="forgorPassword-back">
        <i class="bi bi-arrow-left-short"></i>
    </a>

    <div class="forgorPassword-illustration">
        <img src="/img/illustration/forgetpassword.png" alt="">
    </div>

    <div class="forgorPassword-content">
        <h1>Quên mật khẩu?</h1>
        <h2>Nhập email tài khoản để nhận mã khôi phục</h2>
    </div>

    <form id="OTPValidateForm" method="get" class="forgorPassword-form" action="/OTPValidate">
        <input type="email" id="Email" name="Email" placeholder="Địa chỉ email..." />
        <button type="submit" class="btn btn-primary custom-btn w-100" id="guiEmailButton">Gửi mã khôi phục vào
            email</button>
    </form>



</main>