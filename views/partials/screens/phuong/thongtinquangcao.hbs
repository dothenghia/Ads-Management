<link rel="stylesheet" href="/css/table.css">
<link rel="stylesheet" href="/css/modal.css">
<div class="container-fluid d-flex flex-column px-1 h-100">
    {{!-- Title và filter --}}
    <div class="row" style="padding: 1.5em;">
        <span class="fs-2 fw-semibold" style="color: rgb(93,102,121); margin-right: 2em; width:18%;">Báo Cáo</span>
        <div class="d-flex flex-row mt-2 justify-content-around" style="width: 75%; height: 65%;" >
            {{!-- Hình thức báo cáo --}}
            <div class="border border-2 rounded-3 px-1">
                <span class="fs-6 fw-semibold ms-1" style="color: rgb(93,102,121);">Hình Thức Báo Cáo</span>
                <img src="/assets/icon/arrowdown_ic_n.svg" class="mb-1 mx-1">
            </div>
            {{!-- Loại báo cáo --}}
            <div class="border border-2 rounded-3 px-1">
                <span class="fs-6 fw-semibold ms-1" style="color: rgb(93,102,121);">Loại Báo Cáo</span>
                <img src="/assets/icon/arrowdown_ic_n.svg" class="mb-1 mx-1">
            </div>
            {{!-- Tình trạng báo cáo --}}
            <div class="border border-2 rounded-3 px-1">
                <span class="fs-6 fw-semibold ms-1" style="color: rgb(93,102,121);">Tình Trạng Xử Lý</span>
                <img src="/assets/icon/arrowdown_ic_n.svg" class="mb-1 mx-1">
            </div>
            {{!-- Nút thêm --}}
            <div class="rounded-3 px-3" style="background-color: rgb(0,101,255); border: rgb(0,101,255); padding-top: 0.2em;">
                <span class="fs-6 fw-semibold" style="color: white;">Thêm Báo Cáo</span>
            </div>
            {{!-- Nút Sửa --}}
            <div class="rounded-3 px-3" style="background-color: rgb(0,101,255); border: rgb(0,101,255); padding-top: 0.2em;">
                <span class="fs-6 fw-semibold" style="color: white;">Sửa Báo Cáo</span>
            </div>
        </div>
    </div>

    {{!-- Table --}}
    <div class="row" style="padding: 1.5em;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Tên</th>
                    <th scope="col">Địa Điểm</th>
                    <th scope="col">Loại quảng cáo</th>
                    <th scope="col">Kích thước</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Hình thức</th>
                    <th scope="col">Loại vị trí</th>
                    <th scope="col"> </th>
                </tr>
            </thead>
            <tbody>
                {{!-- Pass data vào --}}
                {{createGlobal 'adIndex' 1}}
                {{#each adLocation}}
                    {{#each adList}}
                        <tr>
                            <td scope="col"  style="padding-top: 1em;">
                                <span class="reportTableData fs-6">{{getGlobal 'adIndex'}}</span>
                                {{incrementGlobal 'adIndex'}}
                            </td>
                            {{#each (getAdInfo ../../ad adId)}}
                                <td scope="col" style="padding-top: 1em;">{{name}}</td>
                            {{/each}}
                            <td scope="col text-center" style="padding-top: 1em; max-width:15em;" >
                                <span class="reportTableData fs-6" >
                                    {{getLocation ../../adLocation ../locationId 2}}
                                </span>
                            </td>
                            <td scope="col" style="padding-top: 1em;">
                                <span class="reportTableData fs-6">{{../type}}</span>
                            </td>
                            {{#each (getAdInfo ../../ad adId)}}
                                <td scope="col" style="padding-top: 1em;">{{size}}</td>
                            {{/each}}
                            <td scope="col" style="padding-top: 1em;" >
                                <span class="reportTableData fs-6">{{../quantity}}</span>
                            </td>
                            <td scope="col" style="padding-top: 1em;" >
                                <span class="reportTableData fs-6">{{../form}}</span>
                            </td>
                            <td scope="col" style="padding-top: 1em;" >
                                <span class="reportTableData fs-6">{{../locationType}}</span>
                            </td>
                            <td scope="col" style="padding-top: 1em;">
                                <button class="adDetailBtn" data-ad-location-details="{{toJSON ../../adLocation}}" data-ad-details="{{toJSON (getAdInfo ../../ad adId)}}">
                                    <img src="/assets/icon/detail_ic.svg" alt="Ad location detail">
                                </button>
                            </td>
                        </tr>
                    {{/each}}
                {{/each}}
                {{removeGlobal 'adIndex' 1}}
        </table>
    </div>

    <!-- Ad detail modal -->
    <div class="modal fade" id="adDetailModal" tabindex="-1" aria-labelledby="adDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title" id="adDetailModalLabel">
                        Thông tin chi tiết
                        <br>
                        <i class="bi bi-geo-alt" id="adDetailAddress"></i>
                    </h6>
                    <button type="button" class="row align-items-start btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="adDetailContent">
                    <h5 class="row justify-content-center" id="adDetailName"></h5>
                    <div class="row" id="adDetailCategoryRow">
                        <div class="col">
                            <h6 id="adDetailCategoryTitle">Loại bảng quảng cáo</h6>
                            <h6 id="adDetailType"></h6>
                        </div>
                        <div class="col">
                            <h6 id="adDetailCategoryTitle">Hình thức quảng cáo</h6>
                            <h6 id="adDetailForm"></h6>
                        </div>
                        <div class="col">
                            <h6 id="adDetailCategoryTitle">Loại vị trí</h6>
                            <h6 id="adDetailLocationType"></h6>
                        </div>
                    </div>
                    <div class="row" id="adDetailCategoryRow">
                        <div class="col">
                            <h6 id="adDetailCategoryTitle">Thời hạn hợp đồng</h6>
                            <h6 id="adDetailContractDate"></h6>
                        </div>
                        <div class="col">
                            <h6 id="adDetailCategoryTitle">Kích thước</h6>
                            <h6 id="adDetailSize"></h6>
                        </div>
                        <div class="col"> </div>
                    </div>
                    <hr>
                    <div class="row">
                        <h6 id="adDetailCategoryTitle">Hình ảnh quảng cáo</h6>
                        <div class="row">
                            <div id="adDetailNoThumbnails" style="display: none">
                                <h6>Không có hình ảnh để hiển thị</h6>
                            </div>
                            <div id="adDetailThumbnails" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="..." alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="..." alt="Second slide">
                                    </div>
                                </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#adDetailThumbnails" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#adDetailThumbnails" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Custom JS script --}}
<script src="/js/adDetail.js"></script>
<script>
    function setDropdownFilterValue(currentElement, value) {
        let associatedFilterButton = currentElement.parentElement.attributes["aria-labelledby"].nodeValue;
        document.querySelector("#" + associatedFilterButton).innerHTML = value;
    }
</script>