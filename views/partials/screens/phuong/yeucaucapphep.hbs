<link rel="stylesheet" href="/css/custom-btn.css">
<link rel="stylesheet" href="/css/table.css">
<link rel="stylesheet" href="/css/phuong/shared.css">
<link rel="stylesheet" href="/css/modal.css">

<style>
    table tbody tr td {
        padding: calc(.5rem + 6px) calc(.5rem + 12px) !important;
    }
</style>

<div class="shared-container">

    {{!-- Header--}}
    <div class="shared-header">
        <h1>Yêu cầu cấp phép</h1>

        <div class="d-flex">
            <button class="btn btn-outline-primary custom-btn">Thêm yêu cầu cấp phép</button>
        </div>
    </div>


    {{!-- Table --}}
    <div class="shared-table-container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Công ty</th>
                    <th scope="col">Email</th>
                    <th scope="col">SĐT</th>
                    <th scope="col">Địa điểm yêu cầu cấp phép</th>
                    <th scope="col"> </th>
                    <th scope="col">Chi tiết</th>
                </tr>
            </thead>

            <tbody>
                {{!-- Pass data vào --}}
                {{#each permissionReq}}
                    <tr>
                        <td scope="col">{{addNumber @index 1}}</td>
                        {{#with co}}
                            <td scope="col">{{name}}</td>
                            <td scope="col">{{email}}</td>
                            <td scope="col">{{phone}}</td>
                        {{/with}}
                        <td scope="col">{{getLocation ../adLocation locationId 2}}</td>
                        <td scope="col"> </td>
                        <td scope="col" style="padding-top: 1em;">
                            <img src="/assets/icon/detail_ic.svg" alt="Ad location detail">
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script>
    function setDropdownFilterValue(currentElement, value) {
        let associatedFilterButton = currentElement.parentElement.attributes["aria-labelledby"].nodeValue;
        document.querySelector("#" + associatedFilterButton).innerHTML = value;
    }
</script>