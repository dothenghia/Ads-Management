<div class="container-fluid d-flex flex-column px-1 h-100 border-start border-2">
    
    {{!-- Title và filter --}}
    <div class="row" style="padding: 1.5em;">
        <span class="fs-1 fw-semibold" style="color: rgb(93,102,121); margin-right: 2em; width:20%;">Báo Cáo</span>
        <div class="d-flex flex-row mt-3 justify-content-evenly" style="width: 73%; height: 65%;" >
            {{!-- Hình thức báo cáo --}}
            <div class="border border-2 rounded-3 px-1 pt-1">
                <span class="fs-6 fw-semibold ms-2" style="color: rgb(93,102,121);">Hình Thức Báo Cáo</span>
                <img src="/assets/icon/arrowdown_ic_n.svg" class="mb-1 mx-1">
            </div>
            {{!-- Loại báo cáo --}}
            <div class="border border-2 rounded-3 px-1 pt-1 ms-2">
                <span class="fs-6 fw-semibold ms-2" style="color: rgb(93,102,121);">Loại Báo Cáo</span>
                <img src="/assets/icon/arrowdown_ic_n.svg" class="mb-1 mx-1">
            </div>
            {{!-- Tình trạng báo cáo --}}
            <div class="border border-2 rounded-3 px-1 pt-1 ms-2">
                <span class="fs-6 fw-semibold ms-2" style="color: rgb(93,102,121);">Tình Trạng Xử Lý</span>
                <img src="/assets/icon/arrowdown_ic_n.svg" class="mb-1 mx-1">
            </div>
            {{!-- Nút thêm --}}
            <div class="rounded-3 pt-2 px-3 ms-2" style="background-color: 	
rgb(0,101,255); border: rgb(0,101,255);">
                <span class="fs-6 fw-semibold" style="color: white;">Thêm Báo Cáo</span>
            </div>
            {{!-- Nút Sửa --}}
            <div class="rounded-3 pt-2 px-3 ms-2" style="background-color: 	
rgb(0,101,255); border: rgb(0,101,255);">
                <span class="fs-6 fw-semibold" style="color: white;">Sửa Báo Cáo</span>
            </div>
        </div>
    </div>

    {{!-- Table --}}
    <div class="row" style="padding: 1.5em;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Loại Báo Cáo</th>
                    <th scope="col">Hình Thức Báo Cáo</th>
                    <th scope="col">Thời Điểm</th>
                    <th scope="col">Vị Trí Gửi Báo Cáo</th>
                    <th scope="col">Tình Trạng Xử Lý</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{!-- Pass data vào --}}
                {{#each report }}
                <tr>
                    <td scope="col"  style="padding-top: 0.8em;">
                        <span class="reportTableData">{{@index}}</span>
                    </td>
                    <td scope="col" style="padding-top: 0.8em;">
                        <span class="reportTableData">{{translateReportType reportType}}</span>
                    </td>
                    <td scope="col" style="padding-top: 0.8em;" >
                        <span class="reportTableData">{{reportForm}}</span>
                    </td>
                    <td scope="col" style="padding-top: 0.8em;">
                        <span class="reportTableData">{{time}}</span>
                    </td>
                    <td scope="col" style="padding-top: 0.8em;">
                        <span class="reportTableData">
                            {{getReportLocation ../adLocation locationId}}
                        </span>
                    </td>
                    <td scope="col" style="padding-top: 0.8em;">
                        <span class="reportTableData">{{status}}</span>
                    </td>
                    <td scope="col" style="padding-top: 0.8em;">
                        <img src="/assets/icon/detail_ic.svg" alt="detail report">
                    </td>
                </tr>
                {{/each}}
</div>