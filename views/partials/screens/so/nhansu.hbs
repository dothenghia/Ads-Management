<link rel="stylesheet" href="/css/custom-btn.css">
<link rel="stylesheet" href="/css/table.css">
<link rel="stylesheet" href="/css/so/nhansu.css">


<div class="nhansu-container">

    {{!-- Header--}}
    <div class="nhansu-header">
        <h1>Nhân sự</h1>

        <div class="d-flex">
            <button class="btn btn-outline-primary custom-btn">Thêm nhân sự</button>

            <button class="btn btn-outline-primary custom-btn mx-3 ">Sửa nhân sự</button>
        </div>
    </div>


    {{!-- Table --}}
    <div class="nhansu-table-container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">Thông tin liên lạc</th>
                    <th scope="col">
                        <select id="" name="" class="rounded-3"> 
                            <option value="Chức vụ">Chức vụ</option>
                            <option value="Cán bộ phường">Cán bộ phường</option>
                            <option value="Cán bộ quận">Cán bộ quận</option>
                            <option value="Cán bộ sở">Cán bộ sở</option>
                        </select>
                    </th>
                    <th scope="col">Khu Vực</th>
                    <th scope="col">Tài Khoản</th>
                    <th scope="col">Mật Khẩu</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>

            <tbody>
                {{!-- Pass data vào --}}
                {{#each account }}
                {{#if (checkIDValidate accountId)}}
                    <tr>
                        <td scope="col">{{@index}}</td>
                        <td scope="col">{{fullname}}</td>
                        <td scope="col">{{phone}}</td>
                        <td scope="col">
                            Cán Bộ {{getAgentRole role}}
                        </td>
                        <td scope="col">
                            {{translateAgentArea idQuan idPhuong}}
                        </td>
                        <td scope="col">{{isUdfNullBlank username}}</td>
                        <td scope="col">{{isUdfNullBlank password}}</td>
                        <td scope="col">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#0065FF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                        </td>
                        <td scope="col">
                            <button class="delete-button" data-id="{{accountId}}" data-account-role="so" data-page="nhansu"> 
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#0065FF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                            </button>
                        </td>
                    </tr>
                {{/if}}
                {{/each}}
            </tbody>
        </table>
    </div>

    <!-- The Permission Delete Modal -->
    <div class="modal" id="confirmationModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Are you sure?</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes</button>
                    <button type="button" class="btn btn-secondary" id="cancelDeleteBtn" data-bs-dismiss="modal">No</button>
                </div>

            </div>
        </div>
    </div>
</div>

{{!-- Custom Delete Btn --}}
<script src="/js/deleteMethod.js"></script>