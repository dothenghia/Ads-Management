<link rel="stylesheet" href="/css/custom-btn.css">
<link rel="stylesheet" href="/css/table.css">
<link rel="stylesheet" href="/css/so/nhansu.css">


<div class="nhansu-container">

    {{!-- Header--}}
    <div class="nhansu-header">
        <h1>Nhân sự</h1>

        <div class="d-flex">
            <button class="btn btn-outline-primary custom-btn">Thêm nhân sự</button>

            <button class="btn btn-outline-primary custom-btn mx-3 ">Sửa nhân sự</button>
        </div>
    </div>


    {{!-- Table --}}
    <div class="nhansu-table-container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Họ tên</th>
                    <th scope="col">Thông tin liên lạc</th>
                    <th scope="col">
                        <select id="" name="" class="rounded-3"> 
                            <option value="Chức vụ">Chức vụ</option>
                            <option value="Cán bộ phường">Cán bộ phường</option>
                            <option value="Cán bộ quận">Cán bộ quận</option>
                            <option value="Cán bộ sở">Cán bộ sở</option>
                        </select>
                    </th>
                    <th scope="col">Khu Vực</th>
                    <th scope="col">Tài Khoản</th>
                    <th scope="col">Mật Khẩu</th>
                </tr>
            </thead>

            <tbody>
                {{!-- Pass data vào --}}
                {{#each account }}
                <tr>
                    <td scope="col">{{@index}}</td>
                    <td scope="col">{{fullname}}</td>
                    <td scope="col">{{phone}}</td>
                    <td scope="col" style="padding-top: 0.6em;">
                        <div class="border border-1 rounded-3 px-1" style="display: inline-flex; line-height: 2em;">
                            <span class="reportTableData fs-6 ms-1">Cán Bộ {{getAgentRole role}}</span>
                            <img src="/assets/icon/arrowdown_ic_n.svg" class="me-1 ms-2">
                        </div>
                    </td>
                    <td scope="col">
                        <div class="border border-1 rounded-3 px-1" style="display: inline-flex; line-height: 2em;">
                            <span class="reportTableData fs-6 ms-1" >
                                    {{translateAgentArea idQuan idPhuong}}
                            </span>
                            <img src="/assets/icon/arrowdown_ic_n.svg" class="me-1 ms-2">
                        </div>
                    </td>
                    <td scope="col">{{isUdfNullBlank username}}</td>
                    <td scope="col">{{isUdfNullBlank password}}</td>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>